<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/SimpleInfo"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
        <tools.CircleImageView
            android:id="@+id/userPhoto"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/self_photo"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/userPhoto"
            android:id="@+id/userName"
            android:layout_centerVertical="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Jack"
            android:textSize="20sp"
            android:textColor="#1588fa"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/userName"
            android:layout_centerVertical="true"
            android:id="@+id/userMessageInfo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="赞了你的动态"
            android:textColor="#8b8b8b"
            android:textSize="20sp"/>
        <LinearLayout
            android:id="@+id/callback"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/self_message_callback"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复"
                android:textSize="20sp"
                android:textColor="#8b8b8b"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/commentInfo"
        android:layout_below="@+id/SimpleInfo"
        android:background="#bfbfbf"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/commentInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请问这是什么书?"
            android:textSize="15sp"
            android:textColor="#8b8b8b"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/backFrame"
        android:layout_below="@+id/commentInfo"
        android:background="#bfbfbf"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:visibility="gone">
        <EditText
            android:id="@+id/backMessage"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#fff"
            android:textSize="15sp"
            android:textColor="#000"
            android:textCursorDrawable="@null"/>
        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/closeBack"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="关闭"
                android:textColor="#8b8b8b"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/submitBack"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="发送"
                android:textColor="#8b8b8b"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>